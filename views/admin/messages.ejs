<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .sidebar {
            background: #2c3e50;
            min-height: 100vh;
            color: white;
        }
        .sidebar .nav-link {
            color: #bdc3c7;
            padding: 15px 20px;
            border-radius: 5px;
            margin: 5px 0;
        }
        .sidebar .nav-link:hover, .sidebar .nav-link.active {
            background: #34495e;
            color: white;
        }
        .message-text {
            max-width: 300px;
            word-break: break-word;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- الشريط الجانبي -->
            <nav class="col-md-3 col-lg-2 sidebar d-md-block">
                <div class="position-sticky pt-3">
                    <div class="text-center mb-4">
                        <h4><i class="fas fa-cogs me-2"></i>لوحة التحكم</h4>
                        <p class="text-muted">مرحباً، <%= username %></p>
                    </div>
                    
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin">
                                <i class="fas fa-tachometer-alt me-2"></i>لوحة التحكم
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/users">
                                <i class="fas fa-users me-2"></i>إدارة المستخدمين
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/admin/messages">
                                <i class="fas fa-comments me-2"></i>إدارة الرسائل
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/logout">
                                <i class="fas fa-sign-out-alt me-2"></i>خروج المسؤول
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="fas fa-home me-2"></i>العودة للتطبيق
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- المحتوى الرئيسي -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="fas fa-comments me-2"></i>إدارة الرسائل</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <form class="d-flex" method="GET">
                            <input class="form-control me-2" type="search" name="search" placeholder="بحث في الرسائل..." 
                                   value="<%= search || '' %>">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- إحصائيات -->
                <div class="row mb-4">
                    <div class="col-12">
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            عرض <%= messages.length %> رسالة 
                            <% if (search) { %> | نتائج البحث عن: "<%= search %>" <% } %>
                        </div>
                    </div>
                </div>

                <!-- جدول الرسائل -->
                <div class="card">
                    <div class="card-body">
                        <% if (messages.length > 0) { %>
                            <div class="table-responsive">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>المرسل</th>
                                            <th>المستقبل</th>
                                            <th>الرسالة</th>
                                            <th>النوع</th>
                                            <th>تاريخ الإرسال</th>
                                            <th>الحالة</th>
                                            <th>الإجراءات</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% messages.forEach(message => { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <img src="<%= message.userId.avatarUrl || '/default-avatar.png' %>" 
                                                             class="rounded-circle me-2" width="30" height="30" 
                                                             alt="<%= message.userId.username %>">
                                                        <span><%= message.userId.username %></span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (message.toUserId) { %>
                                                        <% if (message.toUserId.username) { %>
                                                            <%= message.toUserId.username %>
                                                        <% } else { %>
                                                            <span class="text-muted">خاص</span>
                                                        <% } %>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">عام</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="message-text">
                                                        <%= message.text %>
                                                    </div>
                                                </td>
                                                <td>
                                                    <% if (message.toUserId) { %>
                                                        <span class="badge bg-info">خاص</span>
                                                    <% } else { %>
                                                        <span class="badge bg-success">عام</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <small class="text-muted">
                                                        <%= getTimeAgo(message.createdAt) %>
                                                    </small>
                                                </td>
                                                <td>
                                                    <% if (message.read) { %>
                                                        <span class="badge bg-success">مقروءة</span>
                                                    <% } else if (message.toUserId) { %>
                                                        <span class="badge bg-warning">غير مقروءة</span>
                                                    <% } else { %>
                                                        <span class="badge bg-secondary">عام</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <button class="btn btn-danger btn-delete-message" 
                                                                data-message-id="<%= message._id %>">
                                                            <i class="fas fa-trash"></i> حذف
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>

                            <!-- الترقيم -->
                            <% if (totalPages > 1) { %>
                                <nav aria-label="Page navigation">
                                    <ul class="pagination justify-content-center">
                                        <% for (let i = 1; i <= totalPages; i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link" href="?page=<%= i %>&limit=<%= limit %>&search=<%= search || '' %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            <% } %>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                                <h5 class="text-muted">لا توجد رسائل</h5>
                                <% if (search) { %>
                                    <p class="text-muted">لم يتم العثور على رسائل تطابق بحثك</p>
                                    <a href="/admin/messages" class="btn btn-primary">عرض جميع الرسائل</a>
                                <% } %>
                            </div>
                        <% } %>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal للتأكيد -->
    <div class="modal fade" id="confirmModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">حذف الرسالة</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="modalBody">
                    <!-- سيتم تعبئته بالجافاسكريبت -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                    <button type="button" class="btn btn-danger" id="confirmDelete">حذف</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // معالجة حذف الرسالة
        document.querySelectorAll('.btn-delete-message').forEach(btn => {
            btn.addEventListener('click', function() {
                const messageId = this.dataset.messageId;
                
                document.getElementById('modalBody').innerHTML = `
                    <p>هل أنت متأكد من أنك تريد حذف هذه الرسالة؟</p>
                    <p class="text-danger">هذا الإجراء لا يمكن التراجع عنه.</p>
                `;
                
                const confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
                confirmModal.show();
                
                document.getElementById('confirmDelete').onclick = function() {
                    fetch(`/admin/messages/delete/${messageId}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            alert(data.message);
                            location.reload();
                        } else {
                            alert(data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('حدث خطأ أثناء حذف الرسالة');
                    })
                    .finally(() => {
                        confirmModal.hide();
                    });
                };
            });
        });
    </script>
</body>
</html>
