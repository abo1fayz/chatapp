<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>إنشاء حساب جديد</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    :root {
      --primary-color: #075e54;
      --secondary-color: #128c7e;
      --accent-color: #25d366;
      --light-color: #f8f9fa;
      --dark-color: #1a1a1a;
      --gray-color: #666;
      --border-radius: 20px;
      --shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
      --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    html, body {
      height: 100%;
      width: 100%;
      overflow-x: hidden;
    }

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: var(--gradient);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      line-height: 1.6;
    }

    .container {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: var(--border-radius);
      box-shadow: var(--shadow);
      padding: 30px;
      width: 100%;
      max-width: 450px;
      text-align: center;
      animation: slideUp 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .logo {
      width: 80px;
      height: 80px;
      background: var(--gradient);
      border-radius: 50%;
      margin: 0 auto 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      box-shadow: 0 4px 20px rgba(102, 126, 234, 0.3);
      animation: pulse 2s infinite;
    }

    .logo i {
      font-size: 32px;
      color: white;
    }

    h2 {
      color: var(--dark-color);
      margin-bottom: 8px;
      font-weight: 700;
      font-size: 26px;
      background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .welcome-text {
      color: var(--gray-color);
      margin-bottom: 25px;
      font-size: 16px;
      line-height: 1.5;
    }

    .message {
      background: linear-gradient(135deg, #ffeaa7, #fab1a0);
      color: #d63031;
      padding: 15px;
      border-radius: 12px;
      margin-bottom: 20px;
      font-size: 14px;
      border-right: 4px solid #e17055;
      display: flex;
      align-items: center;
      gap: 10px;
      animation: shake 0.5s ease-in-out;
    }

    .message i {
      font-size: 18px;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }

    .input-group {
      position: relative;
    }

    input[type="password"] {
      width: 100%;
      padding: 16px 20px;
      border: 2px solid #e8e8e8;
      border-radius: var(--border-radius);
      font-size: 16px;
      outline: none;
      transition: all 0.3s ease;
      background-color: var(--light-color);
      font-family: 'Segoe UI', Tahoma, sans-serif;
    }

    input[type="password"]:focus {
      border-color: var(--primary-color);
      box-shadow: 0 0 0 4px rgba(7, 94, 84, 0.1);
      background-color: white;
      transform: translateY(-2px);
    }

    .password-strength {
      height: 4px;
      background: #e8e8e8;
      border-radius: 2px;
      margin-top: 8px;
      overflow: hidden;
      transition: all 0.3s ease;
    }

    .strength-bar {
      height: 100%;
      width: 0%;
      border-radius: 2px;
      transition: all 0.3s ease;
    }

    .file-input-container {
      position: relative;
      display: inline-block;
      width: 100%;
    }

    .file-input-label {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      padding: 18px 20px;
      background: var(--light-color);
      border: 2px dashed var(--primary-color);
      border-radius: var(--border-radius);
      color: var(--primary-color);
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .file-input-label:hover {
      background: var(--primary-color);
      color: white;
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(7, 94, 84, 0.2);
    }

    .file-input-label i {
      font-size: 20px;
    }

    input[type="file"] {
      position: absolute;
      left: -9999px;
      opacity: 0;
    }

    .avatar-preview-container {
      position: relative;
      width: 120px;
      height: 120px;
      margin: 15px auto;
      border-radius: 50%;
      background: var(--light-color);
      border: 3px solid var(--primary-color);
      box-shadow: var(--shadow);
      overflow: hidden;
      display: none;
      animation: zoomIn 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .avatar-preview {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .remove-avatar {
      position: absolute;
      top: -8px;
      left: -8px;
      background: #e74c3c;
      color: white;
      border: none;
      border-radius: 50%;
      width: 28px;
      height: 28px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 14px;
      transition: all 0.3s ease;
    }

    .remove-avatar:hover {
      background: #c0392b;
      transform: scale(1.1);
    }

    .user-info {
      background: linear-gradient(135deg, var(--light-color), #e8f4f8);
      padding: 18px;
      border-radius: 16px;
      margin-bottom: 20px;
      border: 2px solid rgba(7, 94, 84, 0.1);
      position: relative;
      overflow: hidden;
    }

    .user-info::before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      width: 4px;
      height: 100%;
      background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
    }

    .username-display {
      color: var(--primary-color);
      font-weight: 700;
      font-size: 20px;
      margin-top: 5px;
    }

    button {
      background: linear-gradient(135deg, var(--accent-color), var(--secondary-color));
      color: white;
      border: none;
      padding: 18px 24px;
      border-radius: var(--border-radius);
      font-size: 17px;
      font-weight: 700;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 6px 20px rgba(37, 211, 102, 0.3);
      margin-top: 10px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 10px;
      position: relative;
      overflow: hidden;
    }

    button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: 0.5s;
    }

    button:hover::before {
      left: 100%;
    }

    button:hover {
      background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
      transform: translateY(-3px);
      box-shadow: 0 10px 25px rgba(37, 211, 102, 0.4);
    }

    button:active {
      transform: translateY(-1px);
    }

    .file-info {
      font-size: 13px;
      color: var(--gray-color);
      margin-top: 8px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
    }

    .requirements {
      text-align: right;
      font-size: 13px;
      color: var(--gray-color);
      margin-top: 5px;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(40px) scale(0.9);
      }
      to {
        opacity: 1;
        transform: translateY(0) scale(1);
      }
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); }
      50% { transform: scale(1.05); }
    }

    @keyframes zoomIn {
      from {
        opacity: 0;
        transform: scale(0.5) rotate(-10deg);
      }
      to {
        opacity: 1;
        transform: scale(1) rotate(0);
      }
    }

    @keyframes shake {
      0%, 100% { transform: translateX(0); }
      25% { transform: translateX(-5px); }
      75% { transform: translateX(5px); }
    }

    .loading {
      display: none;
      width: 20px;
      height: 20px;
      border: 2px solid transparent;
      border-top: 2px solid white;
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* تحسينات للجوال */
    @media (max-width: 480px) {
      body {
        padding: 15px;
        align-items: flex-start;
      }
      
      .container {
        padding: 25px 20px;
        margin: 0;
      }
      
      h2 {
        font-size: 24px;
      }
      
      .welcome-text {
        font-size: 15px;
        margin-bottom: 20px;
      }
      
      input[type="password"] {
        padding: 14px 18px;
        font-size: 15px;
      }
      
      .file-input-label {
        padding: 16px 18px;
        font-size: 15px;
      }
      
      button {
        padding: 16px 20px;
        font-size: 16px;
      }
      
      .avatar-preview-container {
        width: 100px;
        height: 100px;
      }
      
      form {
        gap: 18px;
      }
      
      .logo {
        width: 70px;
        height: 70px;
      }
      
      .logo i {
        font-size: 28px;
      }
    }

    @media (max-width: 360px) {
      .container {
        padding: 20px 16px;
      }
      
      h2 {
        font-size: 22px;
      }
      
      .username-display {
        font-size: 18px;
      }
      
      .message {
        font-size: 13px;
        padding: 12px;
      }
    }

    /* تحسينات للشاشات الصغيرة جداً في الوضع الأفقي */
    @media (max-height: 600px) {
      body {
        align-items: flex-start;
        padding-top: 20px;
        padding-bottom: 20px;
      }
      
      .container {
        max-height: 95vh;
        overflow-y: auto;
      }
    }

    /* تأثيرات خاصة */
    .particles {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      pointer-events: none;
      z-index: -1;
    }

    .particle {
      position: absolute;
      background: rgba(255, 255, 255, 0.3);
      border-radius: 50%;
      animation: float 6s infinite ease-in-out;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0) rotate(0deg); }
      50% { transform: translateY(-20px) rotate(180deg); }
    }
  </style>
</head>
<body>
  <!-- جسيمات الخلفية -->
  <div class="particles" id="particles"></div>

  <div class="container">
    <div class="logo">
      <i class="fas fa-comments"></i>
    </div>
    
    <h2>مرحبًا <span class="username-display"><%= username %></span>! 👋</h2>
    <p class="welcome-text">أكمل إنشاء حسابك باختيار كلمة مرور قوية وصورة شخصية تعبر عنك</p>

    <% if (message) { %>
      <div class="message">
        <i class="fas fa-exclamation-circle"></i>
        <span><%= message %></span>
      </div>
    <% } %>

    <div class="user-info">
      <div style="color: var(--gray-color); font-size: 14px;">اسم المستخدم المختار:</div>
      <div class="username-display"><i class="fas fa-user-circle" style="margin-left: 8px;"></i><%= username %></div>
    </div>

    <form action="/register" method="POST" enctype="multipart/form-data" id="registerForm">
      <div class="input-group">
        <input type="password" name="password" id="password" placeholder="كلمة المرور الجديدة" required minlength="4" autocomplete="new-password">
        <div class="password-strength">
          <div class="strength-bar" id="strengthBar"></div>
        </div>
        <div class="requirements">يجب أن تحتوي كلمة المرور على 4 أحرف على الأقل</div>
      </div>

      <div class="file-input-container">
        <label for="avatarInput" class="file-input-label">
          <i class="fas fa-camera"></i>
          اختر صورة شخصية
        </label>
        <input type="file" name="avatar" accept="image/*" id="avatarInput" required>
        <div class="file-info">
          <i class="fas fa-info-circle"></i>
          PNG, JPG, JPEG - الحد الأقصى 5MB
        </div>
      </div>

      <div class="avatar-preview-container" id="avatarPreviewContainer">
        <img class="avatar-preview" id="avatarPreview">
        <button type="button" class="remove-avatar" id="removeAvatar">
          <i class="fas fa-times"></i>
        </button>
      </div>

      <button type="submit" id="submitBtn">
        <span id="btnText">إنشاء الحساب</span>
        <div class="loading" id="btnLoading"></div>
      </button>
    </form>
  </div>

  <script>
    // إنشاء جسيمات الخلفية
    function createParticles() {
      const particlesContainer = document.getElementById('particles');
      const particleCount = 15;
      
      for (let i = 0; i < particleCount; i++) {
        const particle = document.createElement('div');
        particle.className = 'particle';
        
        const size = Math.random() * 60 + 10;
        const posX = Math.random() * 100;
        const posY = Math.random() * 100;
        const delay = Math.random() * 5;
        const duration = Math.random() * 3 + 3;
        
        particle.style.width = `${size}px`;
        particle.style.height = `${size}px`;
        particle.style.left = `${posX}%`;
        particle.style.top = `${posY}%`;
        particle.style.animationDelay = `${delay}s`;
        particle.style.animationDuration = `${duration}s`;
        particle.style.opacity = Math.random() * 0.4 + 0.1;
        
        particlesContainer.appendChild(particle);
      }
    }

    // معاينة الصورة
    const avatarInput = document.getElementById('avatarInput');
    const avatarPreview = document.getElementById('avatarPreview');
    const avatarPreviewContainer = document.getElementById('avatarPreviewContainer');
    const removeAvatar = document.getElementById('removeAvatar');

    avatarInput.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        // التحقق من حجم الملف (5MB كحد أقصى)
        if (file.size > 5 * 1024 * 1024) {
          showMessage('حجم الملف كبير جدًا. الرجاء اختيار صورة أقل من 5MB', 'error');
          avatarInput.value = '';
          return;
        }

        // التحقق من نوع الملف
        const validTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif'];
        if (!validTypes.includes(file.type)) {
          showMessage('نوع الملف غير مدعوم. الرجاء اختيار صورة (JPG, PNG, GIF)', 'error');
          avatarInput.value = '';
          return;
        }

        const reader = new FileReader();
        reader.onload = () => {
          avatarPreview.src = reader.result;
          avatarPreviewContainer.style.display = 'block';
        }
        reader.readAsDataURL(file);
      }
    });

    // إزالة معاينة الصورة
    removeAvatar.addEventListener('click', () => {
      avatarPreviewContainer.style.display = 'none';
      avatarInput.value = '';
    });

    // قوة كلمة المرور
    const passwordInput = document.getElementById('password');
    const strengthBar = document.getElementById('strengthBar');

    passwordInput.addEventListener('input', () => {
      const password = passwordInput.value;
      let strength = 0;
      
      if (password.length >= 4) strength += 25;
      if (password.length >= 6) strength += 25;
      if (/[A-Z]/.test(password)) strength += 25;
      if (/[0-9]/.test(password)) strength += 25;
      
      strengthBar.style.width = `${strength}%`;
      
      if (strength < 25) {
        strengthBar.style.background = '#e74c3c';
      } else if (strength < 50) {
        strengthBar.style.background = '#e67e22';
      } else if (strength < 75) {
        strengthBar.style.background = '#f1c40f';
      } else {
        strengthBar.style.background = '#2ecc71';
      }
    });

    // إرسال النموذج
    const registerForm = document.getElementById('registerForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = document.getElementById('btnText');
    const btnLoading = document.getElementById('btnLoading');

    registerForm.addEventListener('submit', (e) => {
      if (!avatarInput.files[0]) {
        e.preventDefault();
        showMessage('الرجاء اختيار صورة شخصية', 'error');
        return;
      }

      // عرض حالة التحميل
      btnText.textContent = 'جاري إنشاء الحساب...';
      btnLoading.style.display = 'block';
      submitBtn.disabled = true;
    });

    // دالة لعرض الرسائل
    function showMessage(text, type) {
      // يمكن إضافة رسائل منبثقة هنا
      alert(text);
    }

    // تهيئة الصفحة
    document.addEventListener('DOMContentLoaded', () => {
      createParticles();
      passwordInput.focus();
    });
  </script>
</body>
</html>
